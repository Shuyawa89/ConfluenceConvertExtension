{
    "manifest_version": 3,
    "name": "Confluence to Markdown",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "clipboardWrite",
        "storage",
        "notifications"
    ],
    "background": {
        "service_worker": "src/background.ts"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ]
}